<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <h3>Edit your Listing.</h3>
            <form enctype="multipart/form-data" method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Tile:</label>
                    <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
                <div class="mb-3">
                    Original Listing Image <br>
                    <img src="<%= listing.image.url %>" alt="listing_image" class="edit_image">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image]" class="form-control" type="file">
                    <div class="invalid-feedback">Please enter valid image link</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input name="listing[price]" class="form-control" type="number" value="<%= listing.price %>" required>
                        <div class="invalid-feedback">Please enter valid price.</div>
                    </div>
                    <div  class="col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <input name="listing[country]" class="form-control" type="text" value="<%= listing.country %>" required>
                        <div class="invalid-feedback">Please enter the country name</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input name="listing[location]" class="form-control" type="text" value="<%= listing.location %>" required>
                    <div class="invalid-feedback">Please enter the location</div>
                </div>
                <button class="btn btn-dark edit-btn">Edit</button>
                <br><br>
            </form>
        </div>
    </div>
</body>